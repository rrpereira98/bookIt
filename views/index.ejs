  <body>
    <header>
      <div id="user-icon-bg"><p>U</p></div>
    </header>
    <main>
      <div class="container">
        <h1>Your Collection</h1>
        <div class="books-area">
          <div class="add-book-btn">
            <!-- <img id="plus-icon" src="assets/svgs/plus.svg" alt="" /> -->
            <a href="/search"><button>add book</button></a>
          </div>
        </div>
        <% if(locals.results) { %> <% results.forEach(book => { %>
          <a href="/book/<%= book.id %>">
            <img
                  src="<% if(book.bookCover !== 'unavailable') { %><%='data:image/jpeg;base64,' + book.bookCover %><% } else { %><%= 'assets/svgs/cover-unavailable.svg' %><% } %>"
                  alt="Book Cover"
              />
          </a>
        <%} ); %> <% } %>
      </div>
    </main>
    <footer>
      <p>https://github.com/rrpereira98</p>
      <p>https://openlibrary.org/developers/api</p>
      <p>copyright <%= new Date().getFullYear() %></p>
    </footer>

    <!-- <script src="js/scripts.js"></script> -->
  </body>
</html>
