    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png"> -->

    <link rel="stylesheet" href="styles/main.css" />
  </head>
  <body>
    <header>
      <div id="user-icon-bg"><p>U</p></div>
    </header>
    <main>
      <div class="container">
        <div class="books-area">
          <div class="add-book-btn">
            <!-- <img id="plus-icon" src="assets/svgs/plus.svg" alt="" /> -->
          </div>
        </div>
        <% if(locals.results) { %> <% results.forEach(book => { %>
        <form action="/add" method="post">
          <input
            type="image"
            src="<% if(book.bookCover !== "unavailable") { %><%="data:image/jpeg;base64," + book.bookCover %><% } else { %> <%= "assets/svgs/cover-unavailable.svg" %><% } %>"
            alt="Book Cover"
            onclick="this.form.submit()"
          />
          <input
            type="hidden"
            ,
            name="title"
            ,
            value="<% if(book.title !== undefined) { %><%= book.title %><% } %>"
          />
          <input
            type="hidden"
            ,
            name="author"
            ,
            value="<% if(book.author !== undefined) { %><%= book.author[0] %><% } %>"
          />
          <input
            type="hidden"
            ,
            name="oclc"
            ,
            value="<% if(book.oclc !== undefined) { %><%= book.oclc[0] %><% } %>"
          />
        </form>
        <%} ); %> <% } %>
      </div>
    </main>
    <footer>
      <p>https://github.com/rrpereira98</p>
      <p>https://openlibrary.org/developers/api</p>
      <p>copyright <%= new Date().getFullYear() %></p>
    </footer>

    <!-- <script src="js/scripts.js"></script> -->
  </body>
</html>
